.contact
	line-height: 15px
	color #000
	font-size: 15px
	font-family: A
	background-repeat no-repeat
	background-position: left center
	&&-email
		padding-left: 25px
		background-image url(../img/icons/envelope.png)
	&&-phone
		padding-left: 20px
		background-image url(../img/icons/tube.png)
		margin-left:  10px
	&:focus
		color #000
		text-decoration: none
	&:hover
		color #000
		text-decoration: underline
