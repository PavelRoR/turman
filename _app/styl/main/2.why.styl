#why
	padding 130px 0 0
.why-item
	text-align: center
	width 100%
	max-width 220px
	margin 0 auto 20px
	background-repeat no-repeat
	background-position: top center
	padding 90px 0 0
	&-1
		background-image url(../img/icons/why-icon-1.png)
	&-2
		background-image url(../img/icons/why-icon-2.png)
	&-3
		background-image url(../img/icons/why-icon-3.png)
	&-4
		background-image url(../img/icons/why-icon-4.png)
	&-title
		font-size: 20px;
		font-family: PTSB
		line-height: 1.15;
		&:after
			content ''
			display: block
			width 60%
			height 3px
			background-color: #0094BD
			margin 7px auto 25px
.why-text
	width 100%
	max-width 760px
	margin 20px auto 45px
	padding 40px 20px
	border: 3px solid #0094BD
	position relative
	text-align: center
	&:before
		content ''
		display: block
		width 50%
		height 5px
		background-color #fff
		top -3px
		left 0
		right 0
		margin 0 auto
		position absolute
		z-index 10